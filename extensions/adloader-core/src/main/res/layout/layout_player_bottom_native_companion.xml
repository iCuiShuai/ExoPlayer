<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?expandable_ad_bg"
    android:paddingStart="13dp"
    android:paddingLeft="13dp"
    android:paddingTop="10dp"
    android:paddingEnd="0dp"
    android:paddingRight="0dp"
    android:paddingBottom="10dp">

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/logoContainer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        >

        <ImageView
            android:id="@+id/logo"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:scaleType="centerCrop"
            android:visibility="visible"
            android:layout_marginRight="10dp"
             />

    </FrameLayout>




    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginRight="10dp"
        app:layout_constraintTop_toTopOf="@+id/logoContainer"
        app:layout_constraintBottom_toBottomOf="@+id/logoContainer"
        app:layout_constraintEnd_toStartOf="@+id/cta_button"
        app:layout_constraintStart_toEndOf="@+id/logoContainer"
        >

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="?mx_font_regular"
            android:lines="1"
            android:textColor="?survey_title_color"
            android:textSize="12sp"
            tools:text="Zomato: Food Delivery &amp; Dining" />

        <TextView
            android:id="@+id/subtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:drawablePadding="6dp"
            android:fontFamily="?mx_font_regular"
            android:lines="1"
            android:textColor="?expandable_ad_subtitle_color"
            android:textSize="10sp"
            app:drawableStartCompat="@drawable/ic_ad_tag"
            tools:text="4.1 FREE" />


    </LinearLayout>

    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/actionsBarrier"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:barrierDirection="start"
        app:constraint_referenced_ids="cta_button" />


    <ImageButton
        android:id="@+id/expand"
        style="?attr/borderlessButtonStyle"
        android:layout_width="36dp"
        android:layout_height="wrap_content"
        android:src="@drawable/navigation_down_arrow"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />



    <Button
        android:id="@+id/cta_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="?expandable_ad_cta_bg"
        android:fontFamily="?mx_font_semi_bold"
        android:minHeight="28dp"
        android:layout_marginRight="10dp"
        android:text="@string/cta_learn_more"
        android:textAllCaps="true"
        android:textColor="?survey_input_dialog_cta_color"
        android:textSize="11sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/expand"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>



