<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="?expandable_ad_bg"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="13dp"
        android:paddingTop="10dp"
        android:paddingEnd="0dp"
        android:paddingBottom="10dp"
        android:paddingLeft="13dp"
        android:paddingRight="0dp">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHeight_max="36dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_max="36dp" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/barrier2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.5" />


        <TextView
            android:id="@+id/title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="3dp"
            android:fontFamily="?mx_font_semi_bold"
            android:lines="1"
            android:textColor="?survey_title_color"
            android:textSize="13sp"
            app:layout_constraintBottom_toBottomOf="@+id/barrier2"
            app:layout_constraintEnd_toStartOf="@+id/cta_button"
            app:layout_constraintStart_toEndOf="@+id/logo"
            tools:text="Zomato: Food Delivery &amp; Dining" />
<!--
        <ImageView
            android:id="@+id/ad_tag_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ad_flag_3"
            app:layout_constraintLeft_toLeftOf="@+id/native_ad_title_container"
            app:layout_constraintTop_toTopOf="@+id/native_ad_sub_title_container"
            app:layout_constraintBottom_toBottomOf="@id/native_ad_sub_title_container"/>-->


        <TextView
            android:id="@+id/subtitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="1dp"
            android:layout_marginEnd="10dp"
            android:fontFamily="sans-serif"
            android:lines="1"
            app:drawableStartCompat="@drawable/ic_ad_tag"
            android:drawablePadding="6dp"
            android:textColor="?expandable_ad_subtitle_color"
            android:textSize="12sp"
            app:layout_constraintEnd_toStartOf="@+id/actionsBarrier"
            app:layout_constraintStart_toEndOf="@+id/logo"
            app:layout_constraintTop_toBottomOf="@+id/barrier2"
            tools:text="4.1 FREE" />

        <androidx.constraintlayout.widget.Barrier
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:barrierDirection="start"
            android:orientation="vertical"
            android:id="@+id/actionsBarrier"
            app:constraint_referenced_ids="cta_button"
            />

        <Button
            android:id="@+id/cta_button"
            android:background="?expandable_ad_cta_bg"
            android:textColor="?survey_input_dialog_cta_color"
            android:fontFamily="?mx_font_semi_bold"
            android:minHeight="32dp"
            android:textStyle="normal"
            android:textAllCaps="true"
            android:textSize="12sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cta_learn_more"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/expand"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/expand"
            style="?attr/borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="48dp"
            android:src="@drawable/navigation_down_arrow"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>




</LinearLayout>