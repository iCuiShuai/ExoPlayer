<?xml version="1.0" encoding="utf-8"?>
<com.mxplay.adloader.nativeCompanion.view.TableItemWrapperLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:riv_corner_radius="4dp"
                android:scaleType="fitCenter" />

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:fontFamily="sans-serif-medium"
                android:textStyle="normal"
                android:textSize="14sp"
                android:textColor="?attr/survey_title_color"
                />

            <TextView
                android:id="@+id/price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:fontFamily="sans-serif"
                android:textSize="12sp"
                android:textColor="?attr/expandable_ad_item_subtitle_color"
                 />

            <Button
                android:id="@+id/cta_button"
                style="?attr/borderlessButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="0dp"
                android:clickable="false"
                android:duplicateParentState="true"
                android:focusable="false"
                android:fontFamily="?mx_font_bold"
                android:minHeight="30dp"
                android:paddingStart="0dp"
                android:paddingLeft="0dp"
                android:letterSpacing="-0.01"
                android:paddingTop="0dp"
                android:paddingBottom="0dp"
                android:textAllCaps="true"
                android:textColor="?attr/survey_input_dialog_cta_color"
                android:textSize="12sp" />

        </LinearLayout>


</com.mxplay.adloader.nativeCompanion.view.TableItemWrapperLayout>

