<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:id="@id/customUi"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:paddingTop="2dp"
  android:background="@drawable/gradient_shadow_background"
  android:orientation="horizontal"
  android:visibility="visible">

  <Button
    android:id="@id/skipButton"
    android:layout_width="106dp"
    android:layout_height="44dp"
    android:layout_marginBottom="8dp"
    android:paddingTop="7dp"
    android:paddingBottom="7dp"
    android:paddingStart="10dp"
    android:paddingEnd="10dp"
    android:background="@color/c_black_50"
    android:enabled="false"
    android:fontFamily="sans-serif-medium"
    android:minHeight="44dp"
    android:textAllCaps="false"
    android:textColor="@android:color/white"
    android:textSize="12sp"
    android:visibility="invisible"
    tools:text="You can skip to
video in 12" />

  <TextView
    android:id="@id/learnMoreButton"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:layout_marginStart="5dp"
    android:layout_marginEnd="30dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="30dp"
    android:layout_gravity="bottom"
    android:paddingTop="8dp"
    android:paddingBottom="8dp"
    android:drawablePadding="4dp"
    android:drawableStart="@drawable/ic_web_link"
    android:drawableLeft="@drawable/ic_web_link"
    android:ellipsize="end"
    android:gravity="start|center_vertical"
    android:lines="1"
    android:textAllCaps="false"
    android:textColor="@android:color/white"
    android:visibility="gone"
    android:text="@string/cta_learn_more"

    />


  <TextView
    android:id="@id/adCounter"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="16dp"
    android:layout_marginLeft="16dp"
    android:layout_gravity="bottom"
    android:paddingBottom="8dp"
    android:fontFamily="sans-serif"
    android:textColor="@android:color/white"
    android:textSize="12sp"
    tools:text="Ad &#8226; 0.12 "
    />
</LinearLayout>

